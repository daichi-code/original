<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @item, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "タイトル" %>
      <%= form.text_field :image, placeholder: "画像を載せてね！" %>
      <%= form.text_area :text, placeholder: "内容を入れてね！", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>