<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @item, local: true) do |form| %>

      <%= render 'shared/error_messages', model: form.object %>


      <%= form.text_area :title, placeholder: "Title" %>
      <%= form.file_field :images, name: 'item[images][]', id: 'item_image' %>
      <div id="image-list"></div>


      <div class="weight-bold-text">
        Category
      <span class="indispensable">必須</span>
      </div>
        <%= form.collection_select :category_id, Category.all, :id, :name, {} %>


      <div class="weight-bold-text">
        Season
      <span class="indispensable">必須</span>
      </div>
        <%= form.collection_select :season_id, Season.all, :id, :name, {} %>


      <div class="weight-bold-text">
        Place
      <span class="indispensable">必須</span>
      </div>
        <%= form.collection_select :prefecture_id, Prefecture.all, :id, :name, {} %>


      <%= form.text_area :text, placeholder: "Text", rows: "10" %>


      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>