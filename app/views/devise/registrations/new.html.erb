<div class="contents row">
  <div class="container">
    <h2>新規アカウント作成の方</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>

<%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post%>
<%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post%>


  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nick_name, class:"input-default", id:"nick_name", placeholder:"例) Pic Pic", maxlength:"40" %>
  </div>


  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>


  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
      <span class='info-text'>※英字と数字の両方を含めて設定してください</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>


    <div class='input-name-wrap'>
      <label class="form-text">フルネーム</label>
      <span class="indispensable">必須</span>
      <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 山田" %>
      <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 太郎" %>
    </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。
    会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>


      <div class="actions">
        <%= f.submit "Next" %>
      </div>
    <% end %>
  </div>
</div>